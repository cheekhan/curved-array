{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "curved-array",
    "version": "0.1.0",
    "identifier": "com.curved-array.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "cheekhan工具包",
                "closable": true,
                "minimizable": true,
                "maximizable": false,
                "resizable": false,
                "width": 1280,
                "height": 720,
                "minWidth": 1280,
                "minHeight": 720,
                "maxWidth": 1280,
                "maxHeight": 720
            }
        ],
        "security": {
            "csp": null
        },
        "trayIcon": {
            "iconPath": "icons/128x128.png",
            "title": "MacOs",
            "tooltip": "真灵"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
